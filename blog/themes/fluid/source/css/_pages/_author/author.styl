.author
  .card
    box-shadow none
    min-width 33%
    background-color transparent
    border 0

  .card-body
    margin 1rem 0
    padding 1rem
    border-radius .3rem
    display block
    width 100%
    height 100%

    &:hover
      .link-avatar
        transform scale(1.1)

  .card-content
    display flex
    flex-wrap nowrap
    width 100%

.link-avatar-page
  flex none
  width 3rem
  height 3rem
  margin-right .75rem
  object-fit cover
  transition-duration .2s
  transition-timing-function ease-in-out
  
  img
    width 100%
    height 100%
    border-radius 50%
    -moz-border-radius 50%
    -webkit-border-radius 50%
    object-fit cover

.link-avatar
  flex none
  width 7rem
  height 7rem
  margin-right .75rem
  object-fit cover
  transition-duration .2s
  transition-timing-function ease-in-out

  img
    width 100%
    height 100%
    border-radius 50%
    -moz-border-radius 50%
    -webkit-border-radius 50%
    object-fit cover

.link-text
  flex 1
  display grid
  flex-direction column

.link-title
  
  text-overflow ellipsis
  white-space nowrap
  color $text_color
  font-weight bold

.link-info
  text-overflow ellipsis
  white-space nowrap
  color $text_color
  font-weight 400
  font-size 0.85rem
  line-height 1.2

.link-intro
  
  font-size 0.85rem
  line-height 1.2
  color var(--sec-text-color)
  display -webkit-box
  -webkit-line-clamp 4
  text-overflow ellipsis
  overflow hidden
  margin-bottom 0.25rem

@media (max-width 767px)
  .author
    display flex
    flex-direction column
    justify-content center
    align-items center

    .card
      padding-left 2rem
      padding-right 2rem
  .card-content
    flex-direction column

  .link-avatar
    width 100%
    height 10rem
    text-align center
    margin-bottom 1rem !important

  .link-avatar img
    width 10rem
    height 10rem

@media (min-width 768px)
  .link-text:only-child
    margin-left 1rem
  .link-avatar
    margin-right 2rem 



